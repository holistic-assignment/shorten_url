.row
  .col-xs-8.col-xs-offset-2
    .jumbotron.jumbotron-fluid{:style => "background-color: #563d7c; color: #fff"}
      %h1.display-3.text-xs-center{:style => "text-align: center"} Create shorten link
      %p.lead.text-xs-center{:style => "color:#cdbfe3"}

=simple_form_for ShortLink.new do |f|
  .row
    .col-xs-8.col-xs-offset-2
      = f.input :url, label: "Create Short Link:"
      -if logged_in?
        = f.hidden_field  :link_type, value:"user_link"
      -else
        = f.hidden_field  :link_type, value:"public_link"
      .text-xs-center
        = f.button :submit, "Create", class: "btn btn-secondary btn-block"